# 下载xxl-job源码,打包后上传到服务器，构建docker镜像
docker build -t xxl-job-admin:1.0 .
# -p 宿主机端口:容器内部端口
docker run -e PARAMS="--spring.datasource.url=jdbc:mysql://192.168.64.4:3306/xxl_job?useUnicode=true&characterEncoding=UTF-8&autoReconnect=true&serverTimezone=Asia/Shanghai" -p 8082:8080 -v ./applogs:/applogs --name xxl-job-admin  -d --restart=always xxl-job-admin:1.0